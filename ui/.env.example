# MinaID Environment Configuration
# Copy this file to .env.local and update with your deployed contract addresses

# ===== Network Configuration =====
# Network to use: mainnet, devnet, berkeley, testworld2, local
NEXT_PUBLIC_NETWORK=devnet

# ===== Cache Configuration =====
# Optional: Override the cache server URL (defaults to current origin)
# For development: http://localhost:3000
# For production: https://your-cdn.com or https://your-app.vercel.app
# NEXT_PUBLIC_CACHE_URL=http://localhost:3000

# ===== Smart Contract Addresses =====

# Devnet (Default - Faster & More Reliable)
NEXT_PUBLIC_DID_REGISTRY_DEVNET=
NEXT_PUBLIC_ZKP_VERIFIER_DEVNET=

# Berkeley Testnet
NEXT_PUBLIC_DID_REGISTRY_BERKELEY=
NEXT_PUBLIC_ZKP_VERIFIER_BERKELEY=

# Mainnet (Production)
NEXT_PUBLIC_DID_REGISTRY_MAINNET=
NEXT_PUBLIC_ZKP_VERIFIER_MAINNET=

# Devnet
NEXT_PUBLIC_DID_REGISTRY_DEVNET=
NEXT_PUBLIC_ZKP_VERIFIER_DEVNET=

# Testworld2
NEXT_PUBLIC_DID_REGISTRY_TESTWORLD=
NEXT_PUBLIC_ZKP_VERIFIER_TESTWORLD=

# Local Development
NEXT_PUBLIC_DID_REGISTRY_LOCAL=
NEXT_PUBLIC_ZKP_VERIFIER_LOCAL=

# ===== UIDAI Configuration =====
# URL to UIDAI public certificate for signature verification
NEXT_PUBLIC_UIDAI_CERT_URL=https://example.com/certificates/uidai-public.pem

# ===== Application Configuration =====
# App name displayed in Passkey UI
NEXT_PUBLIC_APP_NAME=MinaID

# Session duration in milliseconds (default: 1 hour)
NEXT_PUBLIC_SESSION_DURATION=3600000

# Enable debug logging
NEXT_PUBLIC_DEBUG=false

# ===== Optional: Backend Services (Web2.5 Hybrid Mode) =====
# Issuer service URL for credential issuance
NEXT_PUBLIC_ISSUER_SERVICE_URL=

# Verifier service URL for gasless transactions
NEXT_PUBLIC_VERIFIER_SERVICE_URL=

# Gas relay service URL
NEXT_PUBLIC_GAS_RELAY_URL=

# ===== Security Settings =====
# Minimum Passkey authentication timeout (ms)
NEXT_PUBLIC_PASSKEY_TIMEOUT=60000

# Maximum proof validity period (days)
NEXT_PUBLIC_MAX_PROOF_VALIDITY=365

# Enable strict certificate validation
NEXT_PUBLIC_STRICT_CERT_VALIDATION=true
